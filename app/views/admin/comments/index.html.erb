<div class="container">
  <div class="text-center">
    <h4>コメント一覧</h4>
  </div>
  <div class="text-center">
    <% if admin_signed_in? %>
      <div class="search_form">
        <%= form_with url: admin_comments_path,local: true, method: :get do |f| %>
          <%= f.text_field :search %>
          <%= f.submit "検索",class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>コメントID</th>
        <th>ユーザー名</th>
        <th>コメント内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.comment %></td>
        <td>
          <%= link_to "削除する",admin_comment_path(comment.id),method: :delete,class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>