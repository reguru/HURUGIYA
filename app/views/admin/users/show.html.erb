<div class="container">
  <div class="text-center m-5">
    <h4><%= @user.name %>さんの会員情報</h4>
  </div>
  <%= form_with model: @user,url: admin_user_path(@user.id), method: :patch do |f| %>
    <div class="row m-3">
      <div class="col-md-3"></div>
      <div class="col-md-2 d-flex align-items-end">
        <p>プロフィール画像</p>
      </div>
      <div class="col-md-6">
        <%= image_tag @user.get_profile_image, size: "100x100" %>
      </div>
    </div>

    <div class="row m-3">
      <div class="col-md-3"></div>
      <div class="col-md-2">
        <p>会員ID</p>
      </div>
      <div class="col-md-6">
        <%= @user.id %>
      </div>
    </div>

    <div class="row m-3">
      <div class="col-md-3"></div>
      <div class="col-md-2">
        <p>ユーザー名</p>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row m-3">
      <div class="col-md-3"></div>
      <div class="col-md-2">
        <p>メールアドレス</p>
      </div>
      <div class="col-md-6">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row m-3">
      <div class="col-md-3"></div>
        <div class="col-md-2">
          <p>会員ステータス</p>
        </div>
        <div class="col-md-6">
          <%= f.radio_button :is_deleted,false %>
          <%= f.label :is_deleted,"有効" %>
          <%= f.radio_button :is_deleted,true %>
          <%= f.label :is_deleted,"退会" %>
        </div>
    </div>

    <div class="row m-3">
      <div class="col-md-5"></div>
      <div class="col-md-6">
        <%= f.submit "変更を保存", class:'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>