<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>HURUGIYA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <div class="container">
      <div class="row">
        <div class="col-2">
          <sidebar>
            <nav class="navbar navbar-expand-lg bg-dark my-auto ">
              <ul class="nav flex-column">
              <a class="navbar-brand text-white" href="/"><span>HURUGIYA</span></a>
                <% if admin_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "会員一覧",admin_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "コメント一覧",admin_comments_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト",destroy_admin_session_path, class: 'nav-link text-white' %>
                  </li>
                <% elsif user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "ホーム",root_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "古着屋紹介",posts_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "マップ",posts_map_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "マイページ",users_mypage_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト",destroy_user_session_path, class: 'nav-link text-white' %>
                  </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to "ホーム",root_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "古着屋紹介",posts_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "マップ",posts_map_path, class: 'nav-link text-white' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "マイページ",users_mypage_path, class: 'nav-link text-white' %>
                  </li>
                <% end %>
              </ul>
            </nav>
          </sidebar>
        </div>
        <div class="col-10">
          <header class="shadow-sm">
            <nav class="navbar navbar-expand-lg navbar-light">
              <div class="container">
                <ul class="navbar-nav ml-auto">
                <% if admin_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "ログイン",new_admin_session_path, class: 'nav-link text-dark' %>
                  </li>
                <% elsif user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to users_mypage_path, class: 'nav-link text-dark' do %>
                      <%= current_user.name %>
                    <% end %>
                  </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to "ログイン",new_user_session_path, class: 'nav-link text-dark' %>
                  </li>
                <% end %>
                </ul>
              </div>
            </nav>
          </header>
          <main class="mb-auto">
            <%= yield %>
          </main>
          <footer>
            <div class="container mt-5">
              <div class="row">
                <div class="mx-auto">
                  <p>CopyRight Infratop.inc</p>
                </div>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>
