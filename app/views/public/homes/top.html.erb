<div>
  <% if user_signed_in? %>
    <div class="text-center m-5">
      <h2>トップページ</h2>
    </div>
    <div class="container">
      <h3>タグ検索</h3>
      <div class=" d-flex justify-content-center border-bottom">
      <%= link_to posts_path({tag_id:1}),class: 'm-3' do %>
        <%= image_tag 'pexels-cottonbro-studio-6069530.jpg',size: "150x150" %>
        <p class="text-dark">ストリート系</p>
      <% end %>
      <%= link_to posts_path({tag_id:2}),class: 'm-3' do %>
        <%= image_tag 'pexels-cottonbro-studio-6069530.jpg',size: "150x150" %>
        <p class="text-dark">アメカジ系</p>
      <% end %>
      <%= link_to posts_path({tag_id:3}),class: 'm-3' do %>
        <%= image_tag 'pexels-cottonbro-studio-6069530.jpg',size: "150x150" %>
        <p class="text-dark">ミリタリー系</p>
      <% end %>
      <%= link_to posts_path({tag_id:4}),class: 'm-3' do %>
        <%= image_tag 'pexels-cottonbro-studio-6069530.jpg',size: "150x150" %>
        <p class="text-dark">ヨーロッパ古着系</p>
      <% end %>
      <%= link_to posts_path({tag_id:5}),class: 'm-3' do %>
        <%= image_tag 'pexels-cottonbro-studio-6069530.jpg',size: "150x150" %>
        <p class="text-dark">きれいめカジュアル系</p>
      <% end %>
      <%= link_to posts_path({tag_id:6}),class: 'm-3' do %>
        <%= image_tag 'pexels-cottonbro-studio-6069530.jpg',size: "150x150" %>
        <p class="text-dark">ワーク系</p>
      <% end %>
      </div>
    </div>
    <div class="container mt-5">
      <h3>最新の投稿</h3>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-3 mt-3">
            <% if post.image.attached? %>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.image[0],:width => '100%', :height => '150' %>
              <% end %>
              <p class="text-dark mt-3">
                <%= post.name %>
              </p>
              <p class="text-dark">
                <%= truncate(post.introduction,length: 50) %>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center m-5">
      <h3>ログインをしてください。</h3>
    </div>
    <div class="text-center">
      <%= link_to "ログイン",new_user_session_path, class:"btn btn-success" %>
      <%= link_to "新規登録",new_user_registration_path, class:"btn btn-success" %>
    </div>
  <% end %>
</div>