<div class="container">
  <div class="row">
    <%= link_to new_post_path do %>
      新規登録
    <% end %>
  </div>
  <% @posts.each do |posts| %>
  <div class="row mt-5 border">
    <div class="col-3">
      <%= link_to post_path(posts.id) do %>
        <%= image_tag posts.image[0], size: "100x100" %>
      <% end %>
    </div>
    <div class="col-6">
      <%= posts.name %><br>
      <%= posts.introduction %>
    </div>
  </div>
  <% end %>
</div>