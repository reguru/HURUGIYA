<div class="container m-5">
  <%= form_with model: @post do |f| %>
  <div class="row">
    <div class="col-3">
      <h3><%= f.text_field :name %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <% if @post.image.attached? %>
      <% @post.image.each do |image| %>
        <%= image_tag image, size: "200x200" %>
      <% end %>
    <% end %>
    <%= f.file_field :image, multiple: true %>
  </div>
  <div class="row">
    <div class="col-8">
      <%= f.text_area :introduction %>
    </div>
    <div class="col-3">
      <% @post.tags.each do |tag| %>
        <span><%= tag.name %></span>
      <% end %>
      <%#= form_tag({controller:"posts",action:"edit"}, method: :get) do %>
        <%#= text_field_tag :tag %>
        <%#= submit_tag "タグを追加" %>
      <%# end %>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.submit "更新する",class: 'btn btn-success' %>
    </div>
    <div class="col-2">
      <%= link_to "削除する",post_path, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
  <% end %>
</div>