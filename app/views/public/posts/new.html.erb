<div class="container">
  <div class="text-center m-3">
    <h4>新規登録</h4>
  </div>
  <div>
    <%= form_with model: @post do |f| %>
    <div class="row mt-3">
      <div class="col-5"></div>
      <div class="col-6">
        <div id="new-image"></div>
        <%= f.file_field :image, multiple: true %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.label :"古着屋名" %>
      </div>
      <div class="col-6">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.label :"住所" %>
      </div>
      <div class="col-6">
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.label :"紹介文" %>
      </div>
      <div class="col-6">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-5"></div>
      <div class="form-group col-6">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div class="form-check">
            <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-5"></div>
      <div class="col-6">
        <%= f.submit "投稿する", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
</div>