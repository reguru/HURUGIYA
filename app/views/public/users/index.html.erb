<div class="my-index">
  <div class="top-image">
    <% if @user_posts.present? %>
      <div style="height:30px"></div>
      <div class="container">
        <div class="text-center p-5 font-type1">
          <h3>投稿一覧</h3>
        </div>

        <div class="fav-bg">
          <div class="row d-flex justify-content-center">
            <% @user_posts.each do |user_post| %>
            <div class="shadow-sm fav1">
              <%= link_to post_path(user_post), class: 'link' do %>
                <%= image_tag user_post.image[0], class: "my-img" %>
                <p class="post-name"><%= user_post.name %></p>
              <% end %>
            </div>
            <% end %>
          </div>
          <div class="d-flex justify-content-center pt-5">
            <%= paginate @user_posts %>
          </div>
        </div>
        <div style="height: 50px"></div>
      </div>

    <% else %>
      <div class="top-image" style="height: 700px">
        <div style="height:30px"></div>
        <div class="text-center p-5 font-type1">
          <h3>投稿一覧</h3>
        </div>
      </div>
    <% end %>
  </div>
</div>