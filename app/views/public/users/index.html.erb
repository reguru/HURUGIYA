<div class="container">
  <div class="text-center">
    <h3>投稿一覧</h3>
  </div>
  <div>
    <% @user_posts.each do |user_post| %>
      <%= link_to post_path(user_post) do %>
        <%= user_post.name %>
        <%= image_tag user_post.image[0], size:"100x100" %>
        <%= user_post.introduction %>
      <% end %>
    <% end %>
  </div>
</div>