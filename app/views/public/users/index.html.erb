<div class="my-index">
  <div class="mypage-image">
    <% if @user_posts.present? %>
      <div class="container">
        <div class="text-center p-5 font-type1 text-white">
          <h3>投稿一覧</h3>
        </div>

        <div class="row fav-bg d-flex justify-content-center">
          <% @user_posts.each do |user_post| %>
          <div class="shadow-sm fav1">
            <%= link_to post_path(user_post), class: 'link' do %>
              <%= image_tag user_post.image[0], class: "my-img" %>
              <p class="h6 pt-2 px-2 text-dark"><%= user_post.name %></p>
            <% end %>
          </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-center pt-5">
          <%= paginate @user_posts %>
        </div>
      </div>

    <% else %>
      <div class="mypage-image" style="height: 700px">
        <div class="text-center p-5 font-type1 text-white">
          <h3>投稿一覧</h3>
        </div>
      </div>
    <% end %>
  </div>
</div>