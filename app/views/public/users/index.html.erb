<div class="container">
  <div class="text-center m-5 font-type1">
    <h3>投稿一覧</h3>
  </div>

  <div class="row d-flex flex-row bg-light">
      <% @user_posts.each do |user_post| %>
      <div class="ml-4 my-3 shadow-sm">
        <%= link_to post_path(user_post), class: 'link' do %>
          <%= image_tag user_post.image[0],width: 200,height: 200 %>
          <p class="h6 pt-2 px-2 text-dark" style="width:200px;"><%= user_post.name %></p>
        <% end %>
      </div>
      <% end %>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= paginate @user_posts %>
  </div>
</div>
