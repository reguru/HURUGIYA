<div class="mypage-image mypage">
  <div class="container">
    <div class="text-center p-5 font-type1">
      <h3>プロフィール編集</h3>
    </div>
    <%= form_with model:@user, url: users_mypage_path, method: :patch do |f| %>
      <div class="text-center">
        <% if current_user.profile_image %>
          <%= image_tag current_user.profile_image, class: "img_prev pf-img" %><br>
        <% else %>
  
        <% end %>
        <%= f.file_field :profile_image, class: "img_field mt-3" %>
      </div>
  
      <div class="row mt-5">
        <div class="col-md-3 col-sm-1"></div>
        <div class="col-md-2 col-sm-4">
          <%= f.label :"ユーザー名" %>
        </div>
        <div class="col-md-4 col-sm-4">
          <%= f.text_field :name %>
        </div>
      </div>
      
      <div class="row mt-3">
        <div class="col-md-3 col-sm-1"></div>
        <div class="col-md-2 col-sm-4">
          <%= f.label :"メールアドレス" %>
        </div>
        <div class="col-md-4 col-sm-4">
          <%= f.email_field :email,size: "40x50" %>
        </div>
      </div>
      
      <div class="row mt-3">
        <div class="col-md-5 col-sm-5"></div>
        <div class="col-md-4 col-sm-4">
          <%= f.submit "変更を保存する", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>  