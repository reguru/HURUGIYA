<div class="mypage-image mypage">
  <div class="container">
    <div class="text-center p-5 font-type1">
      <h3>プロフィール編集</h3>
    </div>
    <%= form_with model:@user, url: users_mypage_path, method: :patch, multipart: true do |f| %>
      <div class="text-center">
        <% if current_user.profile_image %>
          <%= image_tag current_user.profile_image, class: "img_prev pf-img text-center" %>
        <% else %>

        <% end %>
      </div>

      <div class="d-flex justify-content-center up-btn mt-3">
        <label for="user_profile_image">ファイルを選択</label>
        <input class="img_field" id="user_profile_image" type="file" name="user[profile_image]">
      </div>

      <div class="row mt-5">
        <div class="col-md-3 col-sm-1"></div>
        <div class="col-md-2 col-sm-4 col-4">
          <%= f.label :"ユーザー名" ,class: "user_text" %>
        </div>
        <div class="col-md-4 col-sm-4 col-4">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-3 col-sm-1"></div>
        <div class="col-md-2 col-sm-4 col-4">
          <%= f.label :"メールアドレス" ,class: "user_text" %>
        </div>
        <div class="col-md-4 col-sm-4 col-4">
          <%= f.email_field :email,size: "40x50" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-5 col-sm-5 col-4"></div>
        <div class="col-md-4 col-sm-4 col-4">
          <%= f.submit "変更を保存する", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>