<div class="container">
  <div class="text-center m-5 font-type1">
    <h3>いいね一覧</h3>
  </div>

  <div class="row bg-light">
      <% @favorite_posts.each do |post| %>
      <div class="ml-4 my-3 shadow-sm">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image[0],width: 200,height: 200 %>
          <p class="h6 pt-2 px-2 text-dark" style="width:200px;"><%= post.name %></p>
        <% end %>
      </div>
      <% end %>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= paginate @favorite_posts %>
  </div>
</div>


