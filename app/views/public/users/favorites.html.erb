<div class="my-index">
  <% if @favorite_posts.present? %>
  <div class="top-image">
    <div style="height:30px"></div>
    <div class="container">
      <div class="text-center p-5 font-type1">
        <h3>いいね一覧</h3>
      </div>

      <div class="fav-bg">
        <div class="row d-flex justify-content-center">
          <% @favorite_posts.each do |post| %>
          <div class="shadow-sm fav1">
            <%= link_to post_path(post.id), class: 'link' do %>
              <%= image_tag post.image[0], class: "my-img" %>
              <p class="h6 pt-2 px-2 text-dark"><%= post.name %></p>
            <% end %>
          </div>
          <% end %>
        </div>
  
        <div class="d-flex justify-content-center pt-5">
          <%= paginate @favorite_posts %>
        </div>
      </div>
      <div style="height: 50px"></div>
    </div>

  <% else %>
    <div class="top-image" style="height: 700px">
      <div style="height:30px"></div>
      <div class="text-center p-5 font-type1">
        <h3>いいね一覧</h3>
      </div>
    </div>
  <% end %>
</div>
