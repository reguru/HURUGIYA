<div class="top-image">
  <div style="height:100px"></div>
  <div class="box shadow-lg">
    <div class="box-inner">
      <div class="text-center p-5 font-type1">
        <h2>会員ログイン</h2>
      </div>

      <%= form_with model:@user, url: user_session_path do |f| %>
        <div class="mt-3">
          <%= f.label :"メールアドレス：" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'mt-1 login-box',placeholder:"***@example.com" %>
        </div>
        <div class="mt-3">
          <%= f.label :"パスワード：" %><br />
          <%= f.password_field :password, autocomplete: "current-password",class:'mt-1 login-box',placeholder:"******" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :"情報を保存する" %>
          </div>
        <% end %>
        <div class="mt-3 mb-5">
          <%= f.submit "ログイン", class: 'btn btn-primary login-btn' %>
        </div>
      <% end %>

      <div class="text-center border-top">
        <p class="mt-5">
          <span>新規登録の方は</span>
          <%= render "public/shared/links" %>
        </p>
      </div>
    </div>
  </div>
  <div style="height:100px"></div>
</div>