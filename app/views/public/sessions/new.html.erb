<div class="container">
  <div class="text-center m-5">
    <h2>会員ログイン</h2>
  </div>

  <%= form_with model:@user, url: user_session_path do |f| %>
    <div class="row m-3 ">
      <div class="col-md-4 "></div>
      <div class="col-md-8 mt-3">
        <div>
          <%= f.label :"メールアドレス：" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",:size => "50*50",class:'mt-1',placeholder:"***@example.com" %>
        </div>
        <div class="mt-3">
        <%= f.label :"パスワード：" %><br />
        <%= f.password_field :password, autocomplete: "current-password",:size => "50*50",class:'mt-1',placeholder:"******" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :"情報を保存する" %>
          </div>
        <% end %>
        <div class="mt-3 mb-5">
          <%= f.submit "ログイン", class: 'btn btn-primary submit1' %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="text-center border-top">
    <p class="mt-5">
      <span>新規登録の方は</span>
      <%= render "public/shared/links" %>
      <span>をクリックしてください。</span>
    </p>
  </div>
</div>
