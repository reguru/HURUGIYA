<div class="container">
  <div class="text-center m-5">
    <h2>会員ログイン</h2>
  </div>

  <div class="m-3 d-flex justify-content-center">
    <%= form_with model:@user, url: user_session_path do |f| %>
      <div class="field mt-3">
        <%= f.label :"メールアドレス：" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",:size => "50*50" %></td>
      </div>

      <div class="field mt-3">
        <%= f.label :"パスワード：" %><br />
        <%= f.password_field :password, autocomplete: "current-password",:size => "50*50" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :"情報を保存する" %>
        </div>
      <% end %>

      <div class="actions mt-3 mb-5">
        <%= f.submit "ログイン", class: 'btn btn-primary submit1' %>
      </div>
    <% end %>
  </div>

  <div class="text-center border-top">
    <p class="mt-5">
      <span>新規登録の方は</span>
      <%= render "public/shared/links" %>
      <span>をクリックしてください。</span>
    </p>
  </div>
</div>
